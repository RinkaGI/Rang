{
    "plugins": [],
    "source": {
        "include": ["rang", "example"],
        "includePattern": "(.js$|.md$)",
        "excludePattern": "(node_modules|docs)"
    },

    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false
    },

    "opts": {
        "recurse": true,
        "destination": "./doc"
    },

    "pipelineOperator": {
        "proposal": "hack",
        "topicToken": "#"
    }
}